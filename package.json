{
  "name": "bramhastra",
  "displayName": "BRAMHASTRA - The Divine Coding Extension",
  "description": "A powerful VS Code extension inspired by the divine weapon from Indian mythology, enhancing your coding experience with celestial powers.",
  "version": "0.1.0",
  "icon": "assets/icons/icon.png",
  "engines": {
    "vscode": "^1.84.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Soumya-Chakraborty/BRAMHASTRA.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "my-extension.helloWorld",
        "title": "BRAMHASTRA: Hello World"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "package": "webpack --mode production --devtool hidden-source-map",
    "package:vsix": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.84.0",
    "@types/node": "^20.17.0",
    "typescript": "^5.4.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "ts-loader": "^9.5.0",
    "@vscode/vsce": "^2.24.0"
  },
  "keywords": [
    "bramhastra",
    "divine",
    "coding",
    "indian",
    "productivity",
    "developer tools"
  ],
  "type": "commonjs",
  "publisher": "example"
}
